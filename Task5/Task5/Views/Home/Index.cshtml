@{
    ViewBag.Title = "Главная страница!!!";
}


<div class="row">
    
    <table class="table table-striped">
        @foreach (var b in ViewBag.Products)
        {
            <tr>
                <td>@b.Id</td>
                <td>@b.Name</td>
                <td>@b.Price</td>
            </tr>
        }
    </table>
    
    
    @using (Ajax.BeginForm("Managers", new AjaxOptions { UpdateTargetId = "results" }))
    {
    
        <input type="submit" value="Показать менеджеров" />
    }
    @using (Ajax.BeginForm("Clients", new AjaxOptions { UpdateTargetId = "results" }))
    {

        <input type="submit" value="Показать клиентов" />
    }
    @using (Ajax.BeginForm("ViewMakeOrder", new AjaxOptions {UpdateTargetId = "makeOrder"}))
    {
        <input type="submit" value ="ShowOrderForm" />
    }



    <div id="results"></div>
    <div id="makeOrder"></div>
    

   
</div>
@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")

